<UserControl x:Class="SiberMailer.UI.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:LogViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}"
                Padding="20,15"
                Margin="10,10,10,0"
                CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“‚ Campaign Send Logs"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               FontSize="24"
                               FontWeight="Bold"/>
                    <TextBlock Text="View campaign email send logs"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding RefreshCommand}"
                        Style="{DynamicResource ModernButtonStyle}"
                        VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1"
                Background="{DynamicResource CardBackgroundBrush}"
                CornerRadius="12"
                Margin="10"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: List of Logs -->
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding Logs}"
                          SelectedItem="{Binding SelectedLog}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          Background="Transparent">
                
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TYPE" Binding="{Binding LogType}" Width="100"/>
                        <DataGridTextColumn Header="FILE NAME" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="DATE" Binding="{Binding DisplayDate}" Width="140"/>
                        <DataGridTextColumn Header="SIZE" Binding="{Binding DisplaySize}" Width="70"/>
                        
                        <DataGridTemplateColumn Header="ACTIONS" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- View button selects the item, which triggers loading content via ViewModel property setter -->
                                        <Button Command="{Binding DataContext.ViewLogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Content="ðŸ‘"
                                                ToolTip="View Log"
                                                Style="{DynamicResource ModernButtonStyle}"
                                                Padding="8,4"
                                                Margin="0,0,5,0"/>
                                        <Button Command="{Binding DataContext.DeleteLogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Content="ðŸ—‘"
                                                ToolTip="Delete Log"
                                                Style="{DynamicResource ModernButtonStyle}"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

                <!-- Right: Log Content -->
                <Border Grid.Column="2" 
                        Background="{DynamicResource PanelBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="10"
                        Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="Log Content" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>

                        <TextBox Grid.Row="1"
                                 Text="{Binding SelectedLogContent}"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas, Courier New"
                                 FontSize="12"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 TextWrapping="NoWrap"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                Padding="15,10"
                Margin="10,0,10,10"
                CornerRadius="8">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
