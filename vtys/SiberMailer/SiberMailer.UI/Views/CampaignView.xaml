<UserControl x:Class="SiberMailer.UI.Views.CampaignView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:CampaignViewModel/>
    </UserControl.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Style="{DynamicResource ModernScrollViewerStyle}">
            <StackPanel Margin="10">
                
                <!-- Header -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Campaign Wizard"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="28"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Create and send email campaigns"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Step Indicator -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="35" Height="35" CornerRadius="17">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource ButtonNormalBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStep1}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="1" Foreground="White" FontWeight="Bold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Rectangle Width="30" Height="2" Fill="{DynamicResource BorderBrush}" VerticalAlignment="Center"/>
                        <Border Width="35" Height="35" CornerRadius="17">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource ButtonNormalBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStep2}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="2" Foreground="White" FontWeight="Bold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Rectangle Width="30" Height="2" Fill="{DynamicResource BorderBrush}" VerticalAlignment="Center"/>
                        <Border Width="35" Height="35" CornerRadius="17">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource ButtonNormalBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStep3}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="3" Foreground="White" FontWeight="Bold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- ============================================ -->
                <!-- STEP 1: SMTP Account Selection -->
                <!-- ============================================ -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="25"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsStep1, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ“§" FontSize="24" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Step 1: Select SMTP Account"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Choose the email server to send from"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- SMTP Account Dropdown -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding SmtpAccounts}"
                                      SelectedItem="{Binding SelectedSmtpAccount}"
                                      DisplayMemberPath="AccountName"
                                      Style="{DynamicResource ModernComboBoxStyle}"
                                      Height="38"/>

                            <Button Grid.Column="1"
                                    Content="ðŸ”„"
                                    Command="{Binding RefreshSmtpAccountsCommand}"
                                    Style="{DynamicResource IconButtonStyle}"
                                    ToolTip="Refresh accounts"
                                    Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Selected Account Info -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="8"
                                Padding="15"
                                Visibility="{Binding SelectedSmtpAccount, Converter={StaticResource NullToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding SelectedSmtpAccount.SmtpHost}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text=":"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Margin="2,0"/>
                                        <TextBlock Text="{Binding SelectedSmtpAccount.SmtpPort}"
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                                   FontSize="12">
                                            <Run Text="Daily Limit:"/>
                                            <Run Text="{Binding SelectedSmtpAccount.DailyLimit, Mode=OneWay}"/>
                                            <Run Text=" | Remaining:"/>
                                            <Run Text="{Binding SelectedSmtpAccount.RemainingToday, Mode=OneWay}"/>
                                        </TextBlock>
                                        <Border Margin="10,0,0,0"
                                                CornerRadius="8"
                                                Padding="6,2"
                                                Background="{DynamicResource InfoBrush}">
                                            <TextBlock Text="SECURE" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Unlock Button -->
                                <Button Grid.Column="1"
                                        Command="{Binding UnlockSmtpCommand}"
                                        Padding="20,10">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSmtpUnlocked}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”“" Margin="0,0,8,0"/>
                                        <TextBlock Text="Unlock"/>
                                    </StackPanel>
                                </Button>

                                <!-- Unlocked Badge -->
                                <Border Grid.Column="1"
                                        Background="{DynamicResource SuccessBrush}"
                                        CornerRadius="10"
                                        Padding="15,8"
                                        Visibility="{Binding IsSmtpUnlocked, Converter={StaticResource BoolToVisibility}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ…" Margin="0,0,8,0"/>
                                        <TextBlock Text="Unlocked" Foreground="White" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- STEP 2: Select Recipients (Multi-Select) -->
                <!-- ============================================ -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="25"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsStep2, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ‘¥" FontSize="24" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Step 2: Select Your Audience"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Choose one or more recipient lists for your campaign"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Multi-Select List View with Checkboxes -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                MaxHeight="300">
                            <ListView ItemsSource="{Binding SelectableLists}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource PrimaryTextBrush}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="10,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsSelected}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,15,0"/>

                                            <!-- List Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ListName}"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"/>
                                                <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                                           FontSize="11"
                                                           Margin="0,2,0,0">
                                                    <Run Text="{Binding BranchName}"/> â€¢ 
                                                    <Run Text="{Binding Description}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Contact Count Badge -->
                                            <Border Grid.Column="2"
                                                    Background="{DynamicResource AccentBrush}"
                                                    CornerRadius="12"
                                                    Padding="12,5"
                                                    VerticalAlignment="Center">
                                                <TextBlock Foreground="White" FontSize="12" FontWeight="Bold">
                                                    <Run Text="{Binding ActiveCount, Mode=OneWay}"/>
                                                    <Run Text=" contacts"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            BorderThickness="1"
                                                            BorderBrush="Transparent">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Border>

                        <!-- Audience Summary Badge -->
                        <Border Background="{DynamicResource InfoBrush}"
                                CornerRadius="10"
                                Padding="15,12"
                                Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸŽ¯" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding AudienceSummary}"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- STEP 3: Compose Email & Finalize -->
                <!-- ============================================ -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="25"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsStep3, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ“" FontSize="24" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Step 3: Content &amp; Finalize"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Select a template, customize, and submit for approval"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Template Selection & Subject Row -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Template Selector -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Email Template"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Templates}"
                                          SelectedItem="{Binding SelectedTemplate}"
                                          DisplayMemberPath="TemplateName"
                                          Style="{DynamicResource ModernComboBoxStyle}"
                                          Height="38"/>
                            </StackPanel>

                            <!-- Load from File Button -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Or Load from File"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <Button Command="{Binding LoadTemplateCommand}"
                                        Style="{DynamicResource ModernButtonStyle}"
                                        Height="38">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“" Margin="0,0,8,0"/>
                                        <TextBlock Text="Browse..."/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenImagesFolderCommand}"
                                        Style="{DynamicResource ModernButtonStyle}"
                                        Margin="0,5,0,0"
                                        Height="38">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ–¼ï¸" Margin="0,0,8,0"/>
                                        <TextBlock Text="Images Folder"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Email Subject -->
                        <TextBlock Text="Email Subject"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource ModernTextBoxStyle}"
                                 Margin="0,0,0,15"/>

                        <!-- HTML Body with Test Button -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="HTML Body"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="12"/>
                            <Button Grid.Column="1"
                                    Command="{Binding SendTestEmailCommand}"
                                    Style="{DynamicResource ModernButtonStyle}"
                                    Padding="10,3">
                                <TextBlock Text="ðŸ“§ Send Test" FontSize="11"/>
                            </Button>
                        </Grid>
                        <TextBox Text="{Binding HtmlBody, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource ModernTextBoxStyle}"
                                 Height="150"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 Margin="0,0,0,15"/>

                        <!-- Admin Notes / Job Description -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Job Description (Admin Notes)"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Add notes for the approver to review (optional)"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,10"/>
                                <TextBox Text="{Binding AdminNotes, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBoxStyle}"
                                         Height="60"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Border>



                        <!-- Attachments Section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“Ž" FontSize="18" Margin="0,0,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Attachments"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="10">
                                                <Run Text="{Binding Attachments.Count, Mode=OneWay}"/>
                                                <Run Text=" file(s) attached"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Command="{Binding UploadAttachmentCommand}"
                                            Style="{DynamicResource ModernButtonStyle}"
                                            Padding="12,6">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="âž•" Margin="0,0,5,0"/>
                                            <TextBlock Text="Add File"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- Attachments List -->
                                <ItemsControl ItemsSource="{Binding Attachments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                                    CornerRadius="6"
                                                    Padding="10,8"
                                                    Margin="0,3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="ðŸ“„" Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding}"
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               FontSize="12"
                                                               TextTrimming="CharacterEllipsis"
                                                               VerticalAlignment="Center"/>
                                                    <Button Grid.Column="2"
                                                            Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Content="âœ•"
                                                            Style="{DynamicResource IconButtonStyle}"
                                                            FontSize="10"
                                                            Width="24" Height="24"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Submit Button Panel -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Ready to send via SMTP?"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    <TextBlock Text="Campaign will be queued and sent immediately via your selected SMTP account."
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontSize="12"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Command="{Binding SendCampaignCommand}"
                                        Padding="25,12"
                                        Margin="0,0,10,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSending}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸš€" Margin="0,0,8,0"/>
                                        <TextBlock Text="Send Immediately"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="2"
                                        Command="{Binding OpenLogsCommand}"
                                        Style="{DynamicResource ModernButtonStyle}"
                                        Padding="20,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“‚" Margin="0,0,8,0"/>
                                        <TextBlock Text="Open Logs"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <Border Background="{DynamicResource PanelBackgroundBrush}"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="â† Previous"
                            Command="{Binding PreviousStepCommand}"
                            Style="{DynamicResource ModernButtonStyle}"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsStep1, Converter={StaticResource InverseBoolToVisibility}}"/>
                    
                    <Button Command="{Binding NextStepCommand}"
                            Style="{DynamicResource AccentButtonStyle}"
                            Visibility="{Binding IsStep3, Converter={StaticResource InverseBoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Next â†’"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
