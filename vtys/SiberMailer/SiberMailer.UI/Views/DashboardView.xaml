<UserControl x:Class="SiberMailer.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:DashboardViewModel/>
    </UserControl.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Style="{DynamicResource ModernScrollViewerStyle}">
            <StackPanel Margin="10">
                
                <!-- Header Section -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Dashboard Overview"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="28"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding LastUpdated}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Refresh Button -->
                    <Button Grid.Column="1"
                            Command="{Binding RefreshCommand}"
                            Style="{DynamicResource ModernButtonStyle}"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Loading Indicator -->
                <TextBlock Text="Loading statistics..."
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,20"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Main Stats Cards -->
                <TextBlock Text="Overview"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>

                <ItemsControl ItemsSource="{Binding StatCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                    CornerRadius="12"
                                    Padding="20"
                                    Margin="0,0,15,15"
                                    Width="170"
                                    Height="120">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Icon -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Icon}"
                                               FontSize="24"
                                               Margin="0,0,0,10"/>

                                    <!-- Value -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Value}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ColorKey}" Value="SuccessBrush">
                                                        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ColorKey}" Value="InfoBrush">
                                                        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ColorKey}" Value="WarningBrush">
                                                        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Title -->
                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Title}"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontSize="13"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Secondary Stats Section -->
                <TextBlock Text="Health Metrics"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,20,0,15"/>

                <ItemsControl ItemsSource="{Binding SecondaryStats}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource PanelBackgroundBrush}"
                                    CornerRadius="10"
                                    Padding="16,12"
                                    Margin="0,0,12,12"
                                    MinWidth="140">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Value}"
                                                   FontSize="20"
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ColorKey}" Value="ErrorBrush">
                                                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ColorKey}" Value="WarningBrush">
                                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Title}"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Quick Actions Section -->
                <TextBlock Text="Quick Actions"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,20,0,15"/>

                <WrapPanel>
                    <Button Style="{DynamicResource AccentButtonStyle}" 
                            Margin="0,0,10,10"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Campaigns">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“§" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="New Campaign"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{DynamicResource ModernButtonStyle}" 
                            Margin="0,0,10,10"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Import">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Import Contacts"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{DynamicResource ModernButtonStyle}" 
                            Margin="0,0,10,10"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Contacts">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="View Contacts"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
