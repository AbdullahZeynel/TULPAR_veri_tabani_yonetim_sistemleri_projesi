<UserControl x:Class="SiberMailer.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <vm:SettingsViewModel/>
    </UserControl.DataContext>

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="500" HorizontalAlignment="Center" Margin="0,40,0,40">
                
                <!-- Section 1: Profile Card -->
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="12" 
                        Padding="30" 
                        Margin="0,0,0,30"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- User Icon -->
                        <Border Width="70" Height="70" CornerRadius="35" Background="{DynamicResource AccentBrush}" Margin="0,0,20,0">
                            <TextBlock Text="{Binding CurrentUserName, Converter={StaticResource InitialsConverter}}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="Bold"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUserName}" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="{Binding CurrentBranch}" 
                                       FontSize="14" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,4,0,0"/>
                            <Border Background="{DynamicResource SuccessBrush}" 
                                    HorizontalAlignment="Left" 
                                    CornerRadius="4" 
                                    Padding="8,2" 
                                    Margin="0,8,0,0"
                                    Opacity="0.2">
                                <TextBlock Text="Active" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold" FontSize="11"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Section 2: Security -->
                <TextBlock Text="Security" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" 
                           Margin="0,0,0,15"/>
                
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="12" 
                        Padding="30" 
                        Margin="0,0,0,30"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="Change Password" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   FontSize="14" 
                                   Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Current Password" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,6"/>
                            <PasswordBox x:Name="OldPasswordBox" 
                                         Style="{DynamicResource ModernPasswordBoxStyle}"
                                         PasswordChar="•"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="New Password" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,6"/>
                            <PasswordBox x:Name="NewPasswordBox" 
                                         Style="{DynamicResource ModernPasswordBoxStyle}"
                                         PasswordChar="•"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Confirm New Password" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,6"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Style="{DynamicResource ModernPasswordBoxStyle}"
                                         PasswordChar="•"/>
                        </StackPanel>

                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="{DynamicResource AccentBrush}" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <Button Content="Update Password" 
                                Command="{Binding ChangePasswordCommand}"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Height="40"/>
                    </StackPanel>
                </Border>

                <!-- Section 3: About & Logout -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="{Binding AppVersion, StringFormat='TULPAR V2.0 {0}'}" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Opacity="0.5"
                               FontSize="12"
                               Margin="0,0,0,4"/>
                    
                    <TextBlock Text="Developed by GAZISIBER AND ERGENEKON" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Opacity="0.5"
                               FontSize="11"
                               Margin="0,0,0,20"/>
                    
                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}"
                            Background="Transparent"
                            BorderBrush="{DynamicResource ErrorBrush}"
                            BorderThickness="1"
                            Foreground="{DynamicResource ErrorBrush}"
                            HorizontalAlignment="Center"
                            Padding="30,8"
                            FontSize="14">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
