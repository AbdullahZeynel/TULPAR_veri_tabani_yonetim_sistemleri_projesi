<UserControl x:Class="SiberMailer.UI.Views.ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:ImportViewModel/>
    </UserControl.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Style="{DynamicResource ModernScrollViewerStyle}">
            <StackPanel Margin="10">
                
                <!-- Header -->
                <TextBlock Text="Import Contacts"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           Margin="0,0,0,30"><Run Text="Import contacts from a CSV"/><Run Language="tr-tr" Text=" or XLXS"/><Run Text=" file into your recipient list."/></TextBlock>

                <!-- File Selection Card -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Select File"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- File Path Display -->
                            <Border Grid.Column="0"
                                    Background="{DynamicResource PanelBackgroundBrush}"
                                    CornerRadius="8"
                                    Padding="12,10"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{Binding FileName, TargetNullValue='No file selected...'}"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </Border>

                            <!-- Browse Button -->
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseCommand}"
                                    Style="{DynamicResource ModernButtonStyle}"
                                    Padding="20,10"/>
                        </Grid>

                        <!-- File Info -->
                        <TextBlock
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"><Run Text="Select a CSV"/><Run Language="tr-tr" Text=" or XLXS"/><Run Text=" file to import contacts."/></TextBlock>
                    </StackPanel>
                </Border>

                <!-- Target List Selection Card -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Target Recipient List"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- List ComboBox -->
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AvailableLists}"
                                      SelectedItem="{Binding SelectedList}"
                                      DisplayMemberPath="ListName"
                                      Style="{DynamicResource ModernComboBoxStyle}"
                                      Height="38"
                                      Margin="0,0,10,0"/>

                            <!-- Create New List Button -->
                            <Button Grid.Column="1"
                                    Content="+ New List"
                                    Command="{Binding CreateListCommand}"
                                    Style="{DynamicResource AccentButtonStyle}"
                                    Padding="15,10"/>
                        </Grid>

                        <TextBlock Text="Select the recipient list where imported contacts will be added."
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="0,15,0,0"/>

                        <!-- No List Warning -->
                        <Border Background="#33F44336"
                                CornerRadius="6"
                                Padding="10,8"
                                Margin="0,10,0,0"
                                Visibility="{Binding IsListSelected, Converter={StaticResource InverseBoolToVisibility}}">
                            <TextBlock Text="âš ï¸ Please select or create a target list before importing."
                                       Foreground="{DynamicResource WarningBrush}"
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Preview Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsPreviewVisible, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="Preview (First 5 Rows)"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Simple Preview Grid -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="8"
                                Padding="10"
                                MaxHeight="200">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- Headers -->
                                    <ItemsControl ItemsSource="{Binding PreviewHeaders}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{DynamicResource AccentBrush}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        Margin="0,0,5,5"
                                                        MinWidth="80">
                                                    <TextBlock Text="{Binding}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Data Rows -->
                                    <ItemsControl ItemsSource="{Binding PreviewRows}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ItemsControl ItemsSource="{Binding}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource ButtonNormalBrush}"
                                                                    CornerRadius="4"
                                                                    Padding="8,4"
                                                                    Margin="0,0,5,5"
                                                                    MinWidth="80">
                                                                <TextBlock Text="{Binding}"
                                                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                                                           FontSize="11"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           MaxWidth="150"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Progress Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsImporting, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="Importing..."
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Progress Bar -->
                        <ProgressBar Value="{Binding ProgressValue}"
                                     Maximum="{Binding ProgressMax}"
                                     Height="20"
                                     Foreground="{DynamicResource AccentBrush}"
                                     Background="{DynamicResource PanelBackgroundBrush}"/>

                        <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0}%'}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Result Section -->
                <Border CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        Visibility="{Binding HasResult, Converter={StaticResource BoolToVisibility}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                    <Setter Property="Background" Value="#1A4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                    <Setter Property="Background" Value="#1AF44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="Import Result"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Text="{Binding ResultMessage}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,10,0,0">
                    
                    <Button Content="Import Contacts"
                            Command="{Binding ImportCommand}"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="IsEnabled" Value="{Binding CanImport}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsImporting}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Clear"
                            Command="{Binding ClearCommand}"
                            Style="{DynamicResource ModernButtonStyle}"/>
                </StackPanel>

                <!-- Help Text -->
                <Border Background="{DynamicResource PanelBackgroundBrush}"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Format Requirements"
                                   Foreground="{DynamicResource AccentBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   TextWrapping="Wrap">
                            â€¢ Must have an <Run FontWeight="Bold">Email</Run> column (required)
                            <LineBreak/>
                            â€¢ Optional: FullName, FirstName, LastName, Company
                            <LineBreak/>
                            â€¢ Additional columns will be stored as custom data (JSONB)
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Create New List Dialog Overlay -->
        <Grid Visibility="{Binding ShowNewListDialog, Converter={StaticResource BoolToVisibility}}">
            <!-- Semi-transparent background -->
            <Border Background="#80000000"/>
            
            <!-- Dialog Card -->
            <Border Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12"
                    Padding="25"
                    MaxWidth="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Create New Recipient List"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Branch *"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    
                    <ComboBox ItemsSource="{Binding Branches}"
                              SelectedItem="{Binding SelectedBranch}"
                              DisplayMemberPath="BranchName"
                              Style="{DynamicResource ModernComboBoxStyle}"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock Text="List Name *"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    
                    <TextBox Text="{Binding NewListName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{DynamicResource ModernTextBoxStyle}"
                             Tag="Enter list name..."
                             Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Content="Cancel"
                                Command="{Binding CancelCreateListCommand}"
                                Style="{DynamicResource ModernButtonStyle}"
                                Margin="0,0,5,0"/>
                        
                        <Button Grid.Column="1"
                                Content="Create List"
                                Command="{Binding ConfirmCreateListCommand}"
                                Style="{DynamicResource AccentButtonStyle}"
                                Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
