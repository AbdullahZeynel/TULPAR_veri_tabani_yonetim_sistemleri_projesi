<UserControl x:Class="SiberMailer.UI.Views.SmtpConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:SmtpConfigViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}"
                Padding="20,15"
                Margin="10,10,10,0"
                CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ” SMTP Vault"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               FontSize="24"
                               FontWeight="Bold"/>
                    <TextBlock Text="Securely store and manage SMTP credentials with PIN encryption"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding NewAccountCommand}"
                            Style="{DynamicResource AccentButtonStyle}"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" Margin="0,0,8,0"/>
                            <TextBlock Text="New Account"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RefreshCommand}"
                            Style="{DynamicResource ModernButtonStyle}">
                        <TextBlock Text="ðŸ”„"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Account List -->
            <Border Grid.Column="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12"
                    Margin="0,0,10,0"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Saved Accounts"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding SmtpAccounts}"
                             SelectedItem="{Binding SelectedAccount}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{DynamicResource PanelBackgroundBrush}"
                                                    CornerRadius="8"
                                                    Padding="12"
                                                    Margin="0,0,0,8"
                                                    Cursor="Hand">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding AccountName}"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontSize="11"
                                               Margin="0,3,0,0">
                                        <Run Text="{Binding SmtpHost}"/>
                                        <Run Text=":"/>
                                        <Run Text="{Binding SmtpPort}"/>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Border Background="{DynamicResource SuccessBrush}"
                                                CornerRadius="4"
                                                Padding="5,2"
                                                Margin="0,0,5,0"
                                                Visibility="{Binding UseSsl, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="SSL" FontSize="9" Foreground="White"/>
                                        </Border>
                                        <Border Background="{DynamicResource InfoBrush}"
                                                CornerRadius="4"
                                                Padding="5,2">
                                            <TextBlock FontSize="9" Foreground="White">
                                                <Run Text="{Binding RemainingToday}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding DailyLimit}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Config Form -->
            <Border Grid.Column="1"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12"
                    Padding="25">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Account Configuration"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <!-- Account Name -->
                        <TextBlock Text="Account Name"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding AccountName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource ModernTextBoxStyle}"
                                 Margin="0,0,0,15"/>

                        <!-- Server Settings -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="ðŸ“¡ Server Settings"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="SMTP Host"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   FontSize="12"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding SmtpHost, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ModernTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Port"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   FontSize="12"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding SmtpPort, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ModernTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <CheckBox IsChecked="{Binding UseSsl}"
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”’ Use SSL/TLS"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Border>

                        <!-- Credentials (Encrypted) -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="ðŸ” Credentials"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               FontWeight="SemiBold"/>
                                    <Border Background="{DynamicResource WarningBrush}"
                                            CornerRadius="6"
                                            Padding="6,2"
                                            Margin="10,0,0,0">
                                        <TextBlock Text="Encrypted with PIN"
                                                   Foreground="White"
                                                   FontSize="10"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="Email Address"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBoxStyle}"
                                         Margin="0,0,0,15"/>

                                <TextBlock Text="Password / App Password"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <PasswordBox x:Name="PasswordBox"
                                             PasswordChanged="PasswordBox_PasswordChanged"
                                             Background="{DynamicResource PanelBackgroundBrush}"
                                             Foreground="{DynamicResource PrimaryTextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="12"
                                             Height="40"/>
                            </StackPanel>
                        </Border>

                        <!-- Rate Limiting -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š Rate Limiting"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Daily Send Limit"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding DailyLimit, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBoxStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Command="{Binding DeleteAccountCommand}"
                                    Padding="15,10">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,8,0"/>
                                    <TextBlock Text="Delete"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding TestConnectionCommand}"
                                    Style="{DynamicResource ModernButtonStyle}"
                                    Padding="15,10"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”Œ" Margin="0,0,8,0"/>
                                    <TextBlock Text="Test Connection"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="3"
                                    Command="{Binding SaveSecurelyCommand}"
                                    Style="{DynamicResource AccentButtonStyle}"
                                    Padding="20,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" Margin="0,0,8,0"/>
                                    <TextBlock Text="Save Securely"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                Padding="15,10"
                Margin="10,0,10,10"
                CornerRadius="8">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</UserControl>
