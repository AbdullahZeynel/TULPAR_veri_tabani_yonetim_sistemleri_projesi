<Window x:Class="SiberMailer.UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SiberMailer.UI.ViewModels"
        Title="SiberMailer 2.0 - Secure Login" 
        MinHeight="650" MinWidth="450"
        Height="766" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <!-- Main Container with rounded corners and shadow effect -->
    <Border Background="{DynamicResource WindowBackgroundBrush}"
            CornerRadius="16"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Margin="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.5" 
                              Color="#000000"/>
        </Border.Effect>

        <!-- Main Content Grid -->
        <Grid Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title bar / Close button -->
                <RowDefinition Height="Auto"/>
                <!-- Logo & Branding -->
                <RowDefinition Height="Auto"/>
                <!-- Silver separator -->
                <RowDefinition Height="*"/>
                <!-- Login Form -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- TITLE BAR WITH CLOSE/MINIMIZE -->
            <!-- ============================================ -->
            <Grid Grid.Row="0" Margin="0,-10,-25,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Drag handle hint -->

                <!-- Minimize Button -->
                <Button Grid.Column="1" 
                            Content="─"
                            Command="{Binding MinimizeCommand}"
                            Style="{DynamicResource IconButtonStyle}"
                            FontSize="14"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            ToolTip="Minimize"
                            Margin="0,0,4,0"/>

                <!-- Close Button -->
                <Button Grid.Column="2" 
                            Content="✕"
                            Command="{Binding ExitCommand}"
                            Style="{DynamicResource IconButtonStyle}"
                            FontSize="14"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            ToolTip="Close"/>
            </Grid>

            <!-- ============================================ -->
            <!-- LOGO & BRANDING SECTION -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,30">

                <!-- Wolf Logo Image -->

                <!-- App Name -->
                <!-- Wolf Logo Image -->
                <Image Source="/Assets/logo.png"
                           Height="240"
                           RenderOptions.BitmapScalingMode="HighQuality" Width="318"/>

                <!-- App Name -->

                <!-- Cyber Slogan -->
            </StackPanel>

            <!-- ============================================ -->
            <!-- SILVER SEPARATOR LINE -->
            <!-- ============================================ -->
            <Rectangle Grid.Row="2"
                           Height="1"
                           Fill="{DynamicResource PrimaryTextBrush}"
                           Opacity="0.4"
                           Margin="20,0,20,25"/>

            <!-- ============================================ -->
            <!-- LOGIN FORM -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="3" 
                            VerticalAlignment="Top"
                            Margin="0,0,0,20">

                <!-- Username Field -->
                <TextBlock Text="USERNAME"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Margin="4,0,0,8"/>
                <TextBox x:Name="UsernameTextBox"
                             Style="{DynamicResource ModernTextBoxStyle}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             CaretBrush="#E0E0E0"
                             SelectionBrush="#909090"
                             Margin="0,0,0,20"/>
                <TextBlock Text="PASSWORD"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="11"
                               FontWeight="SemiBold" Height="16"/>

                <!-- Password Field -->
                <PasswordBox x:Name="PasswordBox"
                                 Style="{DynamicResource ModernPasswordBoxStyle}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 FontSize="14"
                                 CaretBrush="#E0E0E0"
                                 SelectionBrush="#909090"
                                 Margin="0,0,0,20"/>

                <!-- Remember Me Checkbox (Silver themed) -->

                <!-- Error Message Display -->
                <Border Background="#30E85050"
                            CornerRadius="8"
                            Padding="14,10"
                            Margin="0,0,0,20"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       FontSize="14"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Login Button (Silver/Black - AccentButtonStyle) -->
                <Button Content="LOGIN"
                            Style="{DynamicResource AccentButtonStyle}"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"
                            Height="50"
                            FontSize="15"
                            FontWeight="Bold"
                            Margin="0,0,0,15"/>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="⟳"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="14"
                                   Margin="0,0,8,0"/>
                    <TextBlock Text="Authenticating..."
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>

            <!-- ============================================ -->
            <!-- FOOTER -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="4" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                <!-- Version Badge -->
                <Border Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="4"
                            Padding="10,4"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                    <TextBlock
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"><Run Text="v2.0.0 |"/><Run Language="tr-tr" Text=" Tulpar"/></TextBlock>
                </Border>

                <!-- Copyright -->
                <TextBlock
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Opacity="0.7"><Run Text="© 2025 gazisiber.org | "/><Run Language="tr-tr" Text="All Rights Preserved"/></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
